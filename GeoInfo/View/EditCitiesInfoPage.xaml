<Page x:Class="GeoInfo.View.EditCitiesInfoPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GeoInfo.View"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditCitiesInfoPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center">
            <ComboBox Name="cmbCities"
                      Margin="0,10,0,0"/>
            <TextBlock Text="Страна"
                       Width="200" />

            <TextBox Name="txtBoxDatetime"
                     Margin="0,10,0,0" />
            <TextBlock Text="Дата и время"
                       Width="200" />

            <TextBox Name="txtBoxLat"
                     Margin="0,10,0,0" />
            <TextBlock Text="Широта"
                       Width="200" />

            <TextBox Name="txtBoxLon"
                     Margin="0,10,0,0" />
            <TextBlock Text="Долгота"
                       Width="200" />

            <TextBox Name="txtBoxPopulation"
                     Margin="0,10,0,0" />
            <TextBlock Text="Население"
                       Width="200" />
            
            <ComboBox Name="cmbUser"
                      Margin="0,10,0,0" />
            <TextBlock Text="Пользователь"
                       Width="200" />
            <StackPanel Orientation="Horizontal"
                        Margin="0,10,0,0">
                <Button Name="btnCancel"
                        Content="Отмена"
                        Height="30"
                        Margin="0,0,10,0"
                        Click="btnCancel_Click" />
                <Button Name="btnSave"
                        Content="Сохранить"
                        Height="30"
                        Click="btnSave_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
