<Page x:Class="GeoInfo.View.UserPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GeoInfo.View"
      mc:Ignorable="d" 
      d:DesignHeight="379" d:DesignWidth="800"
      Title="UserPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.5*"/>
            <RowDefinition Height="4*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1.2*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Column="1"
                    Grid.Row="1">
            <TextBlock Text="Страна"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"/>
            
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10">
                <TextBlock Text="Имя:"
                           Margin="0,0,10,0" />
                <TextBlock Name="txtBlockCountryName" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10">
                <TextBlock Text="Широта:"
                           Margin="0,0,10,0" />
                <TextBlock Name="txtBlockCountryLat" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10">
                <TextBlock Text="Долгота:"
                           Margin="0,0,10,0" />
                <TextBlock Name="txtBlockCountryLon" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10">
                <TextBlock Text="Население:"
                           Margin="0,0,10,0" />
                <TextBlock Name="txtBlockCountryPopulation" />
            </StackPanel>
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10">
                <TextBlock Text="Площадь:"
                           Margin="0,0,10,0" />
                <TextBlock Name="txtBlockCountryArea" />
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="2"
                    Grid.Row="1">
            <TextBlock Text="Город"
                       HorizontalAlignment="Center"
                       FontWeight="Bold" />
            
            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10">
                <TextBlock Text="Имя:"
                            Margin="0,0,10,0" />
                <TextBlock Name="txtBlockCityName" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10">
                <TextBlock Text="Широта:"
                            Margin="0,0,10,0" />
                <TextBlock Name="txtBlockCityLat" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10">
                <TextBlock Text="Долгота:"
                            Margin="0,0,10,0" />
                <TextBlock Name="txtBlockCityLon" />
            </StackPanel>

            <StackPanel Orientation="Horizontal"
                        Margin="0,0,0,10">
                <TextBlock Text="Население:"
                           Margin="0,0,10,0" />
                <TextBlock Name="txtBlockCityPopulation" />
            </StackPanel>
        </StackPanel>
        

        <Button Name="GetInfo"
                Content="Узнать информацию"
                Height="35"
                Width="200"
                Grid.Row="2"
                Grid.Column="1"
                Grid.ColumnSpan="2"
                Click="btnGetInfo_Click" />
        <StackPanel Orientation="Horizontal"
                    Grid.Row="3"
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    HorizontalAlignment="Center">
            <Button Name="btnSaveInfo"
                    Content="Сохранить"
                    Height="35"
                    Width="150"
                    Margin="0,0,10,0"
                    Click="btnSaveInfo_Click" />
            
            <Button Name="btnOpenList"
                    Content="Открыть список"
                    Height="35"
                    Width="170"
                    Click="btnOpenList_Click" />
        </StackPanel>
    </Grid>
</Page>
